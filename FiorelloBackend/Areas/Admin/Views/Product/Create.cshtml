@model ProductCreateVM

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" maxlength="1000">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="name">Description</label>
            <input type="text" class="form-control" id="name" asp-for="Description" maxlength="1000">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="name">Price</label>
            <input type="number" class="form-control" id="name" asp-for="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="name">Categories</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categories">
                <option>Please select one</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="name">Images</label>
            <input class="form-control" id="name" asp-for="ProductImages">
            <span asp-validation-for="ProductImages" class="text-danger"></span>
        </div>
   
        <button type="submit" class="btn btn-primary me-2 text-white">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>
