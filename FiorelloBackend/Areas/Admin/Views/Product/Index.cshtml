@model IEnumerable<FiorelloBackend.Areas.Admin.ViewModels.Product.ProductVM>

<div class="container-fluid mt-3">
    <h2 class="mt-2 text-center">Products</h2>
    <div class="table-responsive mt-3">
        <a asp-action="Create" class="btn btn-success btn-rounded btn-fw">Create</a>
        <table class="table table-striped">
            <thead>
                <tr>

                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/img/@item.ProductImages.FirstOrDefault(m=>m.IsMain).Name" style="width:200px; height:100px" />
                        </td>
                        <td>
                           @item.Name
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.CategoryName
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-rounded btn-fw">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" as class="btn btn-primary btn-rounded btn-fw">Edit</a>
                            <button class="btn btn-danger btn-rounded btn-fw delete-product" data-id="@item.Id">Delete</button>
                            
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

