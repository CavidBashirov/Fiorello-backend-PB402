@model RegisterVM

<h1 class="mt-5 text-center">REGISTER</h1>

<form method="post" asp-action="Register">
    <div class="text-danger" asp-validation-summary="All"></div>
    <label>
        <p class="label-txt">ENTER YOUR FULLNAME</p>
        <input asp-for="FullName" class="input">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for=FullName class="text-danger d-block mt-1" style="text-align:left !important"></span>
    </label>
    <label>
        <p class="label-txt">ENTER YOUR USERNAME</p>
        <input asp-for="UserName" class="input">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="UserName" class="text-danger d-block mt-1" style="text-align:left !important"></span>
    </label>
    <label>
        <p class="label-txt">ENTER YOUR EMAIL</p>
        <input asp-for="Email" type="text" class="input">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for=Email class="text-danger d-block mt-1" style="text-align:left !important"></span>
    </label>
    <label>
        <p class="label-txt">ENTER YOUR PASSWORD</p>
        <input asp-for="Password" class="input">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for=Password class="text-danger d-block mt-1" style="text-align:left !important"></span>
    </label>
    <label>
        <p class="label-txt">ENTER YOUR CONFIRM PASSWORD</p>
        <input asp-for="ConfirmPassword" class="input">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for=ConfirmPassword class="text-danger d-block mt-1" style="text-align:left !important"></span>
    </label>
    <button type="submit">submit</button>
    <a asp-action="Login" class="d-block mt-1">Go to login</a>
</form>




@section css{
    <link rel="stylesheet" href="~/css/account.css">
}

@section js{
   <script>
        $(document).ready(function () {

            $('.input').focus(function () {
                $(this).parent().find(".label-txt").addClass('label-active');
            });

            $(".input").focusout(function () {
                if ($(this).val() == '') {
                    $(this).parent().find(".label-txt").removeClass('label-active');
                };
            });

        });
    </script>
}